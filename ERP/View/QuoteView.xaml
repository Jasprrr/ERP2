<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERP.View"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:ControlzEx="clr-namespace:ControlzEx;assembly=MaterialDesignThemes.Wpf"
        xmlns:Converters="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
        xmlns:UserControl="clr-namespace:ERP.Control"
        x:Class="ERP.View.QuoteView"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Width="1280"
        Height="900"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        MinWidth="1056"
        MinHeight="768">
    <Window.Resources>
        <Converters:NullableToVisibilityConverter x:Key="NullableToVisibilityConverter" />
        <Converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <materialDesign:DialogHost x:Name="DeleteDialog"
                                   DialogClosing="DeleteDialog_DialogClosing">
            <materialDesign:DialogHost.DialogContent>
                <StackPanel>
                    <TextBlock Style="{StaticResource MaterialDesignBody2TextBlock}"
                               Text="Are you sure you want to delete this item?"
                               Margin="24,24,24,24"
                               FontWeight="Normal" />
                    <StackPanel Orientation="Horizontal"
                                FlowDirection="RightToLeft">
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                IsDefault="True"
                                CommandParameter="true"
                                Margin="8"
                                Command="materialDesign:DialogHost.CloseDialogCommand"
                                DockPanel.Dock="Right">
                            DELETE
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                IsDefault="True"
                                CommandParameter="true"
                                Margin="8"
                                Command="materialDesign:DialogHost.CloseDialogCommand"
                                DockPanel.Dock="Right">
                            CANCEL
                        </Button>
                    </StackPanel>
                </StackPanel>
            </materialDesign:DialogHost.DialogContent>
            <materialDesign:DialogHost x:Name="ItemDialog">
                <materialDesign:DialogHost.DialogContent>
                    <StackPanel>
                        <materialDesign:ColorZone Padding="16"
                                                  Mode="PrimaryMid">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="1"
                                           VerticalAlignment="Center"
                                           FontSize="22"
                                           Text="Item"
                                           Style="{StaticResource MaterialDesignTitleTextBlock}"
                                           Margin="12,0,0,0" />
                                <materialDesign:PopupBox Grid.Column="3"
                                                         PlacementMode="BottomAndAlignRightEdges"
                                                         Margin="10,0"
                                                         Width="32"
                                                         Height="32">
                                    <StackPanel>
                                        <Button x:Name="UploadItem"
                                                Click="UploadItem_Click"
                                                Content="Save as standard item"
                                                Tag="{Binding selectedItem.quoteItemID}" />
                                        <Separator />
                                        <Button x:Name="DeleteItem"
                                                Click="DeleteItem_Click"
                                                Content="Delete item"
                                                Tag="{Binding selectedItem.quoteItemID}" />
                                    </StackPanel>
                                </materialDesign:PopupBox>
                            </Grid>
                        </materialDesign:ColorZone>
                        <StackPanel Margin="36,12">
                            <ComboBox x:Name="ItemCode"
                                      Style="{StaticResource MaterialDesignFloatingHintComboBoxFull}"
                                      materialDesign:HintAssist.Hint="Item code"
                                      Text="{Binding selectedItem.itemCode}"
                                      DisplayMemberPath="itemCode"
                                      ItemsSource="{Binding standardItems}"
                                      SelectedItem="{Binding selectedStandardItem}"
                                      IsEditable="True" />
                            <ComboBox x:Name="ItemNominalCode"
                                      Style="{StaticResource MaterialDesignFloatingHintComboBoxFull}"
                                      materialDesign:HintAssist.Hint="Nominal code"
                                      Text="{Binding selectedItem.nominalCode}"
                                      DisplayMemberPath="nominalCode"
                                      ItemsSource="{Binding departments}"
                                      SelectedItem="{Binding selectedDepartment}"
                                      IsEditable="True" />
                            <TextBox x:Name="ItemInternalDescription"
                                     LostFocus="ItemInternalDescription_LostFocus"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Text="{Binding selectedItem.internalDescription}"
                                     materialDesign:HintAssist.Hint="Internal description"
                                     materialDesign:TextFieldAssist.HasTextAreaBox="True"
                                     Style="{StaticResource MaterialDesignCustomFloatingHintTextBoxFull}"
                                     Height="150"
                                     VerticalScrollBarVisibility="Auto" />
                            <TextBox x:Name="ItemExternalDescription"
                                     LostFocus="ItemExternalDescription_LostFocus"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Text="{Binding selectedItem.externalDescription}"
                                     materialDesign:HintAssist.Hint="External description"
                                     materialDesign:TextFieldAssist.HasTextAreaBox="True"
                                     Style="{StaticResource MaterialDesignCustomFloatingHintTextBoxFull}"
                                     Height="150"
                                     VerticalScrollBarVisibility="Auto" />
                            <TextBox TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Text="{Binding selectedItem.comments}"
                                     materialDesign:HintAssist.Hint="Comments"
                                     materialDesign:TextFieldAssist.HasTextAreaBox="True"
                                     Style="{StaticResource MaterialDesignCustomFloatingHintTextBoxFull}"
                                     Height="100"
                                     VerticalScrollBarVisibility="Auto" />
                            <Grid>
                                <TextBox Style="{StaticResource MaterialDesignCustomFloatingHintTextBoxHalf}"
                                         materialDesign:HintAssist.Hint="Quantity"
                                         Text="{Binding selectedItem.quantity, Mode=TwoWay}"
                                         HorizontalAlignment="Left" />
                                <TextBox Style="{StaticResource MaterialDesignCustomFloatingHintTextBoxHalf}"
                                         materialDesign:HintAssist.Hint="Cost"
                                         Text="{Binding selectedItem.itemCost, Mode=TwoWay}"
                                         HorizontalAlignment="Right" />
                            </Grid>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    FlowDirection="RightToLeft">
                            <Button x:Name="SaveItem"
                                    Click="SaveItem_Click"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    IsDefault="True"
                                    Margin="8"
                                    CommandParameter="true"
                                    Command="materialDesign:DialogHost.CloseDialogCommand"
                                    HorizontalAlignment="Right">
                                DONE
                            </Button>
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    IsDefault="True"
                                    Margin="8"
                                    CommandParameter="true"
                                    Command="materialDesign:DialogHost.CloseDialogCommand"
                                    HorizontalAlignment="Left">
                                CANCEL
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:DialogHost.DialogContent>
                <materialDesign:DialogHost x:Name="TimeDialog">
                    <materialDesign:DialogHost.DialogContent>
                        <StackPanel>
                            <materialDesign:ColorZone Padding="16"
                                                      Mode="PrimaryMid">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="1"
                                               VerticalAlignment="Center"
                                               FontSize="22"
                                               Text="Item"
                                               Style="{StaticResource MaterialDesignTitleTextBlock}"
                                               Margin="12,0,0,0" />
                                    <materialDesign:PopupBox Grid.Column="3"
                                                             PlacementMode="BottomAndAlignRightEdges"
                                                             Margin="10,0"
                                                             Width="32"
                                                             Height="32">
                                        <StackPanel>
                                            <Button Content="Convert quote" />
                                            <Separator />
                                            <Button Content="Delete quote" />
                                        </StackPanel>
                                    </materialDesign:PopupBox>
                                </Grid>
                            </materialDesign:ColorZone>
                            <StackPanel Margin="36,12">
                                <ComboBox x:Name="TimeDepartment"
                                          Style="{StaticResource MaterialDesignFloatingHintComboBoxFull}"
                                          materialDesign:HintAssist.Hint="Department"
                                          Text="{Binding selectedTime.department}"
                                          DisplayMemberPath="department"
                                          ItemsSource="{Binding departments}"
                                          SelectedItem="{Binding selectedDepartment}"
                                          SelectionChanged="TimeDepartment_SelectionChanged"
                                          IsEditable="True" />
                                <TextBox Style="{StaticResource MaterialDesignCustomFloatingHintTextBoxHalf}"
                                         materialDesign:HintAssist.Hint="Est. time"
                                         Text="{Binding selectedTime.estatimatedTime}"
                                         HorizontalAlignment="Left" />
                                <Grid>
                                    <TextBox Style="{StaticResource MaterialDesignCustomFloatingHintTextBoxHalf}"
                                             materialDesign:HintAssist.Hint="Initial cost"
                                             Text="{Binding selectedTime.initialCost}"
                                             HorizontalAlignment="Left" />
                                    <TextBox Style="{StaticResource MaterialDesignCustomFloatingHintTextBoxHalf}"
                                             materialDesign:HintAssist.Hint="Rate cost"
                                             Text="{Binding selectedTime.rateCost}"
                                             HorizontalAlignment="Right" />
                                </Grid>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                        FlowDirection="RightToLeft">
                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                        IsDefault="True"
                                        Margin="8"
                                        CommandParameter="true"
                                        Command="materialDesign:DialogHost.CloseDialogCommand"
                                        HorizontalAlignment="Right">
                                    DONE
                                </Button>
                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                        IsDefault="True"
                                        Margin="8"
                                        CommandParameter="true"
                                        Command="materialDesign:DialogHost.CloseDialogCommand"
                                        HorizontalAlignment="Left">
                                    CANCEL
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:DialogHost.DialogContent>
                    <materialDesign:DialogHost x:Name="MaterialDialog">
                        <materialDesign:DialogHost.DialogContent>
                            <StackPanel>
                                <materialDesign:ColorZone Padding="16"
                                                          Mode="PrimaryMid">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="1"
                                                   VerticalAlignment="Center"
                                                   FontSize="22"
                                                   Text="Material"
                                                   Style="{StaticResource MaterialDesignTitleTextBlock}"
                                                   Margin="12,0,0,0" />
                                        <materialDesign:PopupBox Grid.Column="3"
                                                                 PlacementMode="BottomAndAlignRightEdges"
                                                                 Margin="10,0"
                                                                 Width="32"
                                                                 Height="32">
                                            <StackPanel>
                                                <Button Content="Convert quote" />
                                                <Separator />
                                                <Button Content="Delete quote" />
                                            </StackPanel>
                                        </materialDesign:PopupBox>
                                    </Grid>
                                </materialDesign:ColorZone>
                                <StackPanel Margin="36,12">
                                    <ComboBox Style="{StaticResource MaterialDesignFloatingHintComboBoxFull}"
                                              materialDesign:HintAssist.Hint="Supplier"
                                              IsEditable="True">
                                        <ComboBoxItem>Apple</ComboBoxItem>
                                        <ComboBoxItem>Banana</ComboBoxItem>
                                        <ComboBoxItem>Pear</ComboBoxItem>
                                        <ComboBoxItem>Orange</ComboBoxItem>
                                    </ComboBox>
                                    <TextBox TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                             materialDesign:HintAssist.Hint="Notes"
                                             materialDesign:TextFieldAssist.HasTextAreaBox="True"
                                             Style="{StaticResource MaterialDesignCustomFloatingHintTextBoxFull}"
                                             Height="150"
                                             VerticalScrollBarVisibility="Auto" />
                                    <Grid>
                                        <TextBox Style="{StaticResource MaterialDesignCustomFloatingHintTextBoxHalf}"
                                                 materialDesign:HintAssist.Hint="Cost (£)"
                                                 HorizontalAlignment="Left" />
                                        <TextBox Style="{StaticResource MaterialDesignCustomFloatingHintTextBoxHalf}"
                                                 materialDesign:HintAssist.Hint="Rate (%)"
                                                 HorizontalAlignment="Right" />
                                    </Grid>
                                </StackPanel>
                                <Grid>
                                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                                            IsDefault="True"
                                            Margin="8"
                                            CommandParameter="true"
                                            Command="materialDesign:DialogHost.CloseDialogCommand"
                                            HorizontalAlignment="Left">
                                        CANCEL
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                                            IsDefault="True"
                                            Margin="8"
                                            CommandParameter="true"
                                            Command="materialDesign:DialogHost.CloseDialogCommand"
                                            HorizontalAlignment="Right">
                                        DONE
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </materialDesign:DialogHost.DialogContent>
                        <materialDesign:DialogHost x:Name="SubcontractorDialog">
                            <materialDesign:DialogHost.DialogContent>
                                <StackPanel>
                                    <materialDesign:ColorZone Padding="16"
                                                              Mode="PrimaryMid">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="1"
                                                       VerticalAlignment="Center"
                                                       FontSize="22"
                                                       Text="Subcontractor"
                                                       Style="{StaticResource MaterialDesignTitleTextBlock}"
                                                       Margin="12,0,0,0" />
                                            <materialDesign:PopupBox Grid.Column="3"
                                                                     PlacementMode="BottomAndAlignRightEdges"
                                                                     Margin="10,0"
                                                                     Width="32"
                                                                     Height="32">
                                                <StackPanel>
                                                    <Button Content="Convert quote" />
                                                    <Separator />
                                                    <Button Content="Delete quote" />
                                                </StackPanel>
                                            </materialDesign:PopupBox>
                                        </Grid>
                                    </materialDesign:ColorZone>
                                    <StackPanel Margin="36,12">
                                        <ComboBox Style="{StaticResource MaterialDesignFloatingHintComboBoxFull}"
                                                  materialDesign:HintAssist.Hint="Supplier"
                                                  IsEditable="True">
                                            <ComboBoxItem>Apple</ComboBoxItem>
                                            <ComboBoxItem>Banana</ComboBoxItem>
                                            <ComboBoxItem>Pear</ComboBoxItem>
                                            <ComboBoxItem>Orange</ComboBoxItem>
                                        </ComboBox>
                                        <TextBox TextWrapping="Wrap"
                                                 AcceptsReturn="True"
                                                 materialDesign:HintAssist.Hint="Notes"
                                                 materialDesign:TextFieldAssist.HasTextAreaBox="True"
                                                 Style="{StaticResource MaterialDesignCustomFloatingHintTextBoxFull}"
                                                 Height="150"
                                                 VerticalScrollBarVisibility="Auto" />
                                        <Grid>
                                            <TextBox Style="{StaticResource MaterialDesignCustomFloatingHintTextBoxHalf}"
                                                     materialDesign:HintAssist.Hint="Cost (£)"
                                                     HorizontalAlignment="Left" />
                                            <TextBox Style="{StaticResource MaterialDesignCustomFloatingHintTextBoxHalf}"
                                                     materialDesign:HintAssist.Hint="Rate (%)"
                                                     HorizontalAlignment="Right" />
                                        </Grid>
                                    </StackPanel>
                                    <Grid>
                                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                                IsDefault="True"
                                                Margin="8"
                                                CommandParameter="true"
                                                Command="materialDesign:DialogHost.CloseDialogCommand"
                                                HorizontalAlignment="Left">
                                            CANCEL
                                        </Button>
                                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                                IsDefault="True"
                                                Margin="8"
                                                CommandParameter="true"
                                                Command="materialDesign:DialogHost.CloseDialogCommand"
                                                HorizontalAlignment="Right">
                                            DONE
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </materialDesign:DialogHost.DialogContent>
                            <materialDesign:DialogHost x:Name="TaskDialog">
                                <materialDesign:DialogHost.DialogContent>
                                    <StackPanel>
                                        <materialDesign:ColorZone Padding="16"
                                                                  Mode="PrimaryMid">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="1"
                                                           VerticalAlignment="Center"
                                                           FontSize="22"
                                                           Text="Task"
                                                           Style="{StaticResource MaterialDesignTitleTextBlock}"
                                                           Margin="12,0,0,0" />
                                                <materialDesign:PopupBox Grid.Column="3"
                                                                         PlacementMode="BottomAndAlignRightEdges"
                                                                         Margin="10,0"
                                                                         Width="32"
                                                                         Height="32">
                                                    <StackPanel>
                                                        <Button Content="Convert quote" />
                                                        <Separator />
                                                        <Button Content="Delete quote" />
                                                    </StackPanel>
                                                </materialDesign:PopupBox>
                                            </Grid>
                                        </materialDesign:ColorZone>
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <StackPanel Margin="36,12">
                                                <Grid>
                                                    <DatePicker Style="{StaticResource MaterialDesignCustomFloatingDatePickerHalf}"
                                                                materialDesign:HintAssist.Hint="Date"
                                                                HorizontalAlignment="Left" />
                                                    <materialDesign:TimePicker Style="{StaticResource MaterialDesignCustomFloatingTimePickerHalf}"
                                                                               materialDesign:HintAssist.Hint="Time"
                                                                               HorizontalAlignment="Right" />
                                                </Grid>
                                                <TextBox TextWrapping="Wrap"
                                                         AcceptsReturn="True"
                                                         materialDesign:HintAssist.Hint="Description"
                                                         materialDesign:TextFieldAssist.HasTextAreaBox="True"
                                                         Style="{StaticResource MaterialDesignCustomFloatingHintTextBoxFull}"
                                                         Height="150"
                                                         VerticalScrollBarVisibility="Auto" />
                                                <TextBlock Text="Assigned to"
                                                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                           Foreground="#FF9A9A9A"
                                                           VerticalAlignment="Bottom"
                                                           Margin="0,0,0,8"
                                                           Grid.Column="1"
                                                           Grid.Row="9"
                                                           FontSize="10" />
                                                <Button Grid.Column="3"
                                                        x:Name="userButton"
                                                        Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                                                        Margin="0,6,0,0"
                                                        Grid.Row="9"
                                                        VerticalAlignment="Bottom"
                                                        Focusable="False"
                                                        HorizontalAlignment="Right"
                                                        Height="22"
                                                        Width="22"
                                                        Padding="0"
                                                        Click="userButton_Click"
                                                        Style="{DynamicResource MaterialDesignCustomButton}">
                                                    <materialDesign:PackIcon Kind="AccountPlus"
                                                                             Width="18"
                                                                             Height="18" />
                                                </Button>
                                                <ItemsControl Grid.Row="10"
                                                              Grid.Column="1"
                                                              ItemsSource="{Binding userList}"
                                                              Grid.ColumnSpan="3"
                                                              BorderBrush="#89000000"
                                                              BorderThickness="0,0,0,1"
                                                              Margin="0,0,0,4"
                                                              Width="256">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <materialDesign:Chip Content="{Binding forename}"
                                                                                 Margin="4"
                                                                                 Icon="$"
                                                                                 IsDeletable="True" />
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                </ItemsControl>
                                            </StackPanel>
                                        </ScrollViewer>
                                        <Grid>
                                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                                    IsDefault="True"
                                                    Margin="8"
                                                    CommandParameter="true"
                                                    Command="materialDesign:DialogHost.CloseDialogCommand"
                                                    HorizontalAlignment="Left">
                                                CANCEL
                                            </Button>
                                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                                    IsDefault="True"
                                                    Margin="8"
                                                    CommandParameter="true"
                                                    Command="materialDesign:DialogHost.CloseDialogCommand"
                                                    HorizontalAlignment="Right">
                                                DONE
                                            </Button>
                                        </Grid>
                                    </StackPanel>
                                </materialDesign:DialogHost.DialogContent>
                                <materialDesign:DialogHost x:Name="UserDialog">
                                    <materialDesign:DialogHost.DialogContent>
                                        <StackPanel>
                                            <materialDesign:ColorZone Padding="16"
                                                                      Mode="PrimaryMid">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="1"
                                                               VerticalAlignment="Center"
                                                               FontSize="22"
                                                               Text="Users"
                                                               Style="{StaticResource MaterialDesignTitleTextBlock}"
                                                               Margin="12,0,0,0" />
                                                </Grid>
                                            </materialDesign:ColorZone>
                                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                <StackPanel Margin="36,12">
                                                    <ItemsControl  ItemsSource="{Binding userList}"
                                                                   Grid.IsSharedSizeScope="True"
                                                                   Grid.Column="1"
                                                                   VerticalContentAlignment="Stretch"
                                                                   Margin="0,8"
                                                                   Width="256">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid Margin="0,4">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="50" />
                                                                        <ColumnDefinition Width="206" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <CheckBox IsChecked="{Binding complete}"
                                                                              Grid.Column="0"
                                                                              HorizontalAlignment="Center"
                                                                              Cursor="Hand"
                                                                              VerticalAlignment="Center" />
                                                                    <TextBlock x:Name="taskSubheader"
                                                                               Grid.Column="1"
                                                                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                                               Text="{Binding fullName}"
                                                                               VerticalAlignment="Center" />
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </ScrollViewer>
                                            <Grid>
                                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                                        IsDefault="True"
                                                        Margin="8"
                                                        CommandParameter="true"
                                                        Command="materialDesign:DialogHost.CloseDialogCommand"
                                                        HorizontalAlignment="Right">
                                                    DONE
                                                </Button>
                                            </Grid>
                                        </StackPanel>
                                    </materialDesign:DialogHost.DialogContent>
                                    <Grid Background="{DynamicResource MaterialDesignPaper}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <materialDesign:ColorZone Grid.Row="0"
                                                                  Padding="16"
                                                                  Mode="PrimaryMid"
                                                                  materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                                                  Grid.ColumnSpan="2"
                                                                  Panel.ZIndex="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="1"
                                                           VerticalAlignment="Center"
                                                           FontSize="22"
                                                           Text="Quote"
                                                           Style="{StaticResource MaterialDesignTitleTextBlock}"
                                                           Margin="48,0,0,0" />
                                                <Button materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                                        Margin="10,0"
                                                        Padding="4"
                                                        Grid.Column="2">
                                                    <materialDesign:PackIcon Kind="Download"
                                                                             Height="24"
                                                                             Width="24" />
                                                </Button>
                                                <Button materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                                        Margin="10,0"
                                                        Padding="4"
                                                        Grid.Column="3"
                                                        ToolTip="Stage forward">
                                                    <materialDesign:PackIcon Kind="Forward"
                                                                             Height="24"
                                                                             Width="24" />
                                                </Button>
                                                <Button materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                                        Margin="10,0"
                                                        Padding="4"
                                                        Grid.Column="4">
                                                    <materialDesign:PackIcon Kind="Delete"
                                                                             Height="24"
                                                                             Width="24" />
                                                </Button>
                                                <materialDesign:PopupBox Grid.Column="5"
                                                                         PlacementMode="BottomAndAlignRightEdges"
                                                                         StaysOpen="True"
                                                                         Margin="10,0"
                                                                         Width="32"
                                                                         Height="32">
                                                    <StackPanel>
                                                        <Button Content="Convert quote" />
                                                        <Separator />
                                                        <Button Content="Delete quote" />
                                                    </StackPanel>
                                                </materialDesign:PopupBox>
                                            </Grid>
                                        </materialDesign:ColorZone>
                                        <ProgressBar Grid.Row="1"
                                                     IsIndeterminate="True"
                                                     Visibility="Collapsed" />
                                        <ScrollViewer Background="#FFFAFAFA"
                                                      Padding="4"
                                                      Grid.Row="2"
                                                      HorizontalContentAlignment="Center"
                                                      VerticalScrollBarVisibility="Auto">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="*"
                                                                      MinWidth="336" />
                                                    <ColumnDefinition Width="auto" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <materialDesign:Card Style="{StaticResource MaterialDesignCard}">
                                                        <StackPanel Margin="36,12">
                                                            <TextBlock Text="Details"
                                                                       VerticalAlignment="Center"
                                                                       Style="{StaticResource MaterialDesignTitleTextBlock}" />
                                                            <Grid>
                                                                <TextBox Style="{StaticResource MaterialDesignCustomFloatingHintTextBoxHalf}"
                                                                         materialDesign:HintAssist.Hint="Quote no."
                                                                         Text="{Binding selectedQuote.quoteID}"
                                                                         IsEnabled="False"
                                                                         HorizontalAlignment="Left" />

                                                                <TextBox Style="{StaticResource MaterialDesignCustomFloatingHintTextBoxHalf}"
                                                                         materialDesign:HintAssist.Hint="Date"
                                                                         Text="{Binding selectedQuote.dateCreated, StringFormat=\{0:d\}}"
                                                                         IsEnabled="False"
                                                                         HorizontalAlignment="Right" />
                                                            </Grid>
                                                            <ComboBox Style="{StaticResource MaterialDesignFloatingHintComboBoxFull}"
                                                                      materialDesign:HintAssist.Hint="Company *"
                                                                      ItemsSource="{Binding accountList}"
                                                                      DisplayMemberPath="accountName"
                                                                      SelectedItem="{Binding selectedAccount}"
