<Window x:Class="ERP.View.AccountView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERP.View"
        mc:Ignorable="d"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:ControlzEx="clr-namespace:ControlzEx;assembly=MaterialDesignThemes.Wpf" 
        xmlns:Converters="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
        Title="Wyatt"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.Resources>
        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" x:Key="MaterialDesignFloatingHintTextBoxFull">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Width" Value="256"/>
            <Setter Property="Margin" Value="0,12,0,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <materialDesign:ColorZone Grid.Column="0"
                                  Padding="16" 
                                  materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                  Mode="PrimaryMid"
                                  Grid.ColumnSpan="2" Panel.ZIndex="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           FontSize="22"
                           Text="Account"
                           Style="{StaticResource MaterialDesignTitleTextBlock}"/>
                <materialDesign:PopupBox PlacementMode="BottomAndAlignCentres"
                                         Height="32"
                                         Width="32"
                                         Grid.Column="1" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center" 
                                         HorizontalContentAlignment="Center" 
                                         VerticalContentAlignment="Center"
                                         Margin="10,0">
                    <materialDesign:PopupBox.ToggleContent>
                        <materialDesign:PackIcon Kind="Plus"
                                                 Foreground="White"
                                                 Height="30"
                                                 Width="30"/>
                    </materialDesign:PopupBox.ToggleContent>
                    <StackPanel>
                        <Button ToolTip="One" Content="This is some content"/>
                        <Button ToolTip="Two" IsEnabled="False">2</Button>
                        <Button ToolTip="Three">3</Button>
                    </StackPanel>
                </materialDesign:PopupBox>
                <Button Grid.Column="2" 
                        Padding="0" 
                        Width="32"
                        materialDesign:ShadowAssist.ShadowDepth="Depth0"
                        materialDesign:RippleAssist.ClipToBounds="False"
                        Margin="10,0">
                    <Button.Content>
                        <materialDesign:PackIcon Kind="ContentSave"
                                                 Width="24"
                                                 Height="24"/>
                    </Button.Content>
                </Button>
                <materialDesign:PopupBox Grid.Column="3" 
                                         PlacementMode="BottomAndAlignRightEdges" 
                                         StaysOpen="True"
                                         Margin="10,0">
                    <materialDesign:PopupBox.ToggleCheckedContent>
                        <materialDesign:PackIcon Kind="Pencil" Width="24" Height="24" />
                    </materialDesign:PopupBox.ToggleCheckedContent>
                    <StackPanel>
                        <Button Content="Hello World" />
                        <Button Content="Nice Popup" />
                        <Button Content="Can't Touch This" IsEnabled="False" />
                        <Separator/>
                        <Button Content="Goodbye"/>
                    </StackPanel>
                </materialDesign:PopupBox>
            </Grid>
        </materialDesign:ColorZone>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <materialDesign:Card Grid.Column="0" 
                                     HorizontalAlignment="Left" 
                                     VerticalAlignment="Stretch" >
                <TabControl BorderThickness="0"
                            Width="364" 
                            Padding="0">
                    <TabItem Style="{DynamicResource MaterialTab}"
                             Width="90">
                        <TabItem.Header>
                            <Label Content="DETAILS"/>
                        </TabItem.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <materialDesign:PackIcon Kind="Domain"
                                                     Grid.Column="0" 
                                                     Width="24"
                                                     Height="24"
                                                     VerticalAlignment="Bottom" 
                                                     Margin="16,0,16,4"/>
                            <TextBox materialDesign:HintAssist.Hint="Name" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBoxFull}"
                                     materialDesign:HintAssist.IsFloating="True"
                                     Grid.Row="0"
                                     Grid.Column="1"
                                     materialDesign:HintAssist.FloatingScale="1"
                                     materialDesign:HintAssist.FloatingOffset="0,-18"/>
                            <materialDesign:PackIcon Kind="Phone"
                                                     Grid.Column="0"
                                                     Grid.Row="1"
                                                     Width="24"
                                                     Height="24"
                                                     VerticalAlignment="Bottom" 
                                                     Margin="16,0,16,4"/>
                            <TextBox materialDesign:HintAssist.Hint="Phone 1" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBoxFull}"
                                     Grid.Row="1"
                                     Grid.Column="1"
                                     materialDesign:HintAssist.FloatingScale="1"
                                     materialDesign:HintAssist.FloatingOffset="0,-18"/>
                            <materialDesign:PackIcon Kind="Phone"
                                                     Grid.Column="0"
                                                     Grid.Row="2"
                                                     Width="24"
                                                     Height="24"
                                                     VerticalAlignment="Bottom" 
                                                     Margin="16,0,16,4"/>
                            <TextBox materialDesign:HintAssist.Hint="Phone 2" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBoxFull}"
                                     Grid.Row="2"
                                     Grid.Column="1"
                                     materialDesign:HintAssist.FloatingScale="1"
                                     materialDesign:HintAssist.FloatingOffset="0,-18"/>
                            <materialDesign:PackIcon Kind="Email"
                                                     Grid.Column="0"
                                                     Grid.Row="3"
                                                     Width="24"
                                                     Height="24"
                                                     VerticalAlignment="Bottom" 
                                                     Margin="16,0,16,4"/>
                            <TextBox materialDesign:HintAssist.Hint="Email" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBoxFull}"
                                     Grid.Row="3"
                                     Grid.Column="1"
                                     materialDesign:HintAssist.FloatingScale="1"
                                     materialDesign:HintAssist.FloatingOffset="0,-18"/>
                            <TextBox TextWrapping="Wrap" 
                                     AcceptsReturn="True"
                                     materialDesign:HintAssist.Hint="Description"
                                     materialDesign:TextFieldAssist.HasTextAreaBox="True"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBoxFull}"
                                     VerticalScrollBarVisibility="Auto"
                                     Grid.Column="1"
                                     Grid.Row="5"
                                     Height="300"
                                     materialDesign:HintAssist.FloatingScale="1"/>
                        </Grid>
                    </TabItem>
                    <TabItem Style="{DynamicResource MaterialTab}"
                             Width="90">
                        <TabItem.Header>
                            <Label Content="BILLING"/>
                        </TabItem.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="370"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <materialDesign:PackIcon Kind="MapMarker"
                                                     Grid.Column="0" 
                                                     Width="24"
                                                     Height="24"
                                                     VerticalAlignment="Bottom" 
                                                     Margin="16,0,16,4"/>
                            <TextBox materialDesign:HintAssist.Hint="Address 1" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBoxFull}"
                                     materialDesign:HintAssist.IsFloating="True"
                                     Grid.Row="0"
                                     Grid.Column="1"
                                     Margin="0,16,0,4"
                                     materialDesign:HintAssist.FloatingScale="1"
                                     materialDesign:HintAssist.FloatingOffset="0,-18"/>
                            <TextBox materialDesign:HintAssist.Hint="Address 2" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBoxFull}"
                                     Grid.Row="2"
                                     Grid.Column="1"
                                     Margin="0,16,0,4"
                                     materialDesign:HintAssist.FloatingScale="1"
                                     materialDesign:HintAssist.FloatingOffset="0,-18"/>
                            <TextBox materialDesign:HintAssist.Hint="City" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBoxFull}"
                                     Grid.Row="3"
                                     Grid.Column="1"
                                     Margin="0,16,0,4"
                                     materialDesign:HintAssist.FloatingScale="1"
                                     materialDesign:HintAssist.FloatingOffset="0,-18"/>
                            <TextBox materialDesign:HintAssist.Hint="County" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBoxFull}"
                                     Grid.Row="4"
                                     Grid.Column="1"
                                     Margin="0,16,0,4"
                                     materialDesign:HintAssist.FloatingScale="1"
                                     materialDesign:HintAssist.FloatingOffset="0,-18"/>
                            <TextBox materialDesign:HintAssist.Hint="Postcode" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBoxFull}"
                                     Grid.Row="5"
                                     Grid.Column="1"
                                     Margin="0,16,0,4"
                                     Width="155"
                                     materialDesign:HintAssist.FloatingScale="1"
                                     materialDesign:HintAssist.FloatingOffset="0,-18" 
                                     HorizontalAlignment="Left"/>
                            <TextBox materialDesign:HintAssist.Hint="Account Number" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBoxFull}"
                                     Grid.Row="6"
                                     Grid.Column="1"
                                     Margin="0,16,0,4"
                                     Width="155"
                                     materialDesign:HintAssist.FloatingScale="1"
                                     materialDesign:HintAssist.FloatingOffset="0,-18" 
                                     HorizontalAlignment="Left"/>
                            <ComboBox Grid.Row="7"
                                      Grid.Column="1"
                                      Margin="0,16,0,4"
                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                      materialDesign:HintAssist.Hint="Default Carriage"
                                      materialDesign:HintAssist.FloatingScale="1"
                                      materialDesign:HintAssist.FloatingOffset="0,-18">
                                <ComboBoxItem Content="T0"/>
                                <ComboBoxItem Content="T1" IsSelected="True"/>
                                <ComboBoxItem Content="T2"/>
                                <ComboBoxItem Content="T4"/>
                                <ComboBoxItem Content="T5"/>
                                <ComboBoxItem Content="T7"/>
                                <ComboBoxItem Content="T8"/>
                                <ComboBoxItem Content="T9"/>
                                <ComboBoxItem Content="T20"/>
                                <ComboBoxItem Content="T22"/>
                                <ComboBoxItem Content="T23"/>
                                <ComboBoxItem Content="T24"/>
                                <ComboBoxItem Content="T25"/>
                            </ComboBox>
                        </Grid>
                    </TabItem>
                    <TabItem Style="{DynamicResource MaterialTab}"
                             Width="90">
                        <TabItem.Header>
                            <Label Content="SHIPPING"/>
                        </TabItem.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="370"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <materialDesign:PackIcon Kind="MapMarker"
                                                     Grid.Column="0" 
                                                     Width="24"
                                                     Height="24"
                                                     VerticalAlignment="Bottom" 
                                                     Margin="16,0,16,4"/>
                            <TextBox materialDesign:HintAssist.Hint="Address 1" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBoxFull}"
                                     materialDesign:HintAssist.IsFloating="True"
                                     Grid.Row="0"
                                     Grid.Column="1"
                                     Margin="0,16,0,4"
                                     materialDesign:HintAssist.FloatingScale="1"
                                     materialDesign:HintAssist.FloatingOffset="0,-18"/>
                            <TextBox materialDesign:HintAssist.Hint="Address 2" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBoxFull}"
                                     Grid.Row="2"
                                     Grid.Column="1"
                                     Margin="0,16,0,4"
                                     materialDesign:HintAssist.FloatingScale="1"
                                     materialDesign:HintAssist.FloatingOffset="0,-18"/>
                            <TextBox materialDesign:HintAssist.Hint="City" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBoxFull}"
                                     Grid.Row="3"
                                     Grid.Column="1"
                                     Margin="0,16,0,4"
                                     materialDesign:HintAssist.FloatingScale="1"
                                     materialDesign:HintAssist.FloatingOffset="0,-18"/>
                            <TextBox materialDesign:HintAssist.Hint="County" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBoxFull}"
                                     Grid.Row="4"
                                     Grid.Column="1"
                                     Margin="0,16,0,4"
                                     materialDesign:HintAssist.FloatingScale="1"
                                     materialDesign:HintAssist.FloatingOffset="0,-18"/>
                            <TextBox materialDesign:HintAssist.Hint="Postcode" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBoxFull}"
                                     Grid.Row="5"
                                     Grid.Column="1"
                                     Margin="0,16,0,4"
                                     Width="155"
                                     materialDesign:HintAssist.FloatingScale="1"
                                     materialDesign:HintAssist.FloatingOffset="0,-18" 
                                     HorizontalAlignment="Left"/>
                            <ComboBox Grid.Row="6"
                                      Grid.Column="1"
                                      Margin="0,16,0,4"
                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                      materialDesign:HintAssist.Hint="Default Carriage"
                                      materialDesign:HintAssist.FloatingScale="1"
                                      materialDesign:HintAssist.FloatingOffset="0,-18">
                                <ComboBoxItem Content="Collection" IsSelected="True"/>
                                <ComboBoxItem Content="Courier"/>
                                <ComboBoxItem Content="BIE Magnum Delivery"/>
                            </ComboBox>
                        </Grid>
                    </TabItem>
                    <TabItem Style="{DynamicResource MaterialTab}"
                             Width="90">
                        <TabItem.Header>
                            <Label Content="OTHER"/>
                        </TabItem.Header>
                    </TabItem>
                </TabControl>
            </materialDesign:Card>
        </Grid>
        <StatusBar Grid.Row="2" Height="20"/>
    </Grid>
</Window>
