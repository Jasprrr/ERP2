<Window x:Class="ERP.View.AccountView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERP.View"
        mc:Ignorable="d"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:ControlzEx="clr-namespace:ControlzEx;assembly=MaterialDesignThemes.Wpf" 
        xmlns:Converters="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
        Height="800"
        Width="800"
        Title="Wyatt"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <materialDesign:ColorZone Grid.Column="0"
                                  Padding="16" 
                                  materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                  Mode="PrimaryMid"
                                  Grid.ColumnSpan="2" Panel.ZIndex="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           FontSize="22"
                           Text="Account"
                           Style="{StaticResource MaterialDesignTitleTextBlock}"/>
                <Button Grid.Column="1" 
                        Padding="4" 
                        Width="34"
                        materialDesign:ShadowAssist.ShadowDepth="Depth0"
                        materialDesign:RippleAssist.ClipToBounds="False">
                    <materialDesign:PackIcon Kind="AccountPlus" Width="24" Height="24"/>
                </Button>
                <materialDesign:PopupBox Grid.Column="2" 
                                         PlacementMode="BottomAndAlignRightEdges" 
                                         StaysOpen="False">
                    <StackPanel>
                        <Button Content="Hello World" />
                        <Button Content="Nice Popup" />
                        <Button Content="Can't Touch This" IsEnabled="False" />
                        <Separator/>
                        <Button Content="Goodbye"/>
                    </StackPanel>
                </materialDesign:PopupBox>
            </Grid>
        </materialDesign:ColorZone>

        <TabControl Grid.Row="1" BorderThickness="0">
            <TabItem Header="MATERIAL"
                     Width="90"
                     Style="{DynamicResource TabItemStyle1}">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Material Design</TextBlock>
            </TabItem>
            <TabItem Height="48"
                     Width="90" 
                     Header="DESIGN" 
                     Style="{DynamicResource TabItemStyle1}">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Looks Quite Nice</TextBlock>
            </TabItem>
            <TabItem Style="{DynamicResource TabItemStyle1}"
                     Width="90">
                <TabItem.Header>
                    <Label Content="123"/>
                </TabItem.Header>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="320"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <materialDesign:PackIcon Kind="Account"
                                             Grid.Column="0" 
                                             Width="24"
                                             Height="24"
                                             VerticalAlignment="Bottom" 
                                             Margin="16,0,16,4"/>
                    <TextBox materialDesign:HintAssist.Hint="Name" 
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Grid.Row="0"
                             Grid.Column="1"
                             Margin="0,16,0,4"/>
                    <materialDesign:PackIcon Kind="Phone"
                                     Grid.Column="0"
                                     Grid.Row="1"
                                     Width="24"
                                     Height="24"
                                     VerticalAlignment="Bottom" 
                                     Margin="16,0,16,4"/>
                    <TextBox materialDesign:HintAssist.Hint="Phone 1" 
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Grid.Row="1"
                             Grid.Column="1"
                             Margin="0,16,0,4"/>
                    <materialDesign:PackIcon Kind="Phone"
                                     Grid.Column="0"
                                     Grid.Row="2"
                                     Width="24"
                                     Height="24"
                                     VerticalAlignment="Bottom" 
                                     Margin="16,0,16,4"/>
                    <TextBox materialDesign:HintAssist.Hint="Phone 2" 
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Grid.Row="2"
                             Grid.Column="1"
                             Margin="0,16,0,4"/>
                    <materialDesign:PackIcon Kind="Email"
                                             Grid.Column="0"
                                             Grid.Row="3"
                                             Width="24"
                                             Height="24"
                                             VerticalAlignment="Bottom" 
                                             Margin="16,0,16,4"/>
                    <TextBox materialDesign:HintAssist.Hint="Email" 
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Grid.Row="3"
                             Grid.Column="1"
                             Margin="0,16,0,4"/>
                    <materialDesign:PackIcon Kind="Thermometer"
                                             Grid.Column="0"
                                             Grid.Row="4"
                                             Width="24"
                                             Height="24"
                                             VerticalAlignment="Bottom" 
                                             Margin="16,0,16,4"/>
                    <ComboBox materialDesign:HintAssist.Hint="Search" 
                              IsEditable="False" 
                              IsEnabled="False"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Grid.Row="4"
                              Grid.Column="1"
                              Margin="0,16,0,4">
                        <ComboBoxItem IsSelected="True">Apple</ComboBoxItem>
                        <ComboBoxItem>Banana</ComboBoxItem>
                        <ComboBoxItem>Pear</ComboBoxItem>
                        <ComboBoxItem>Orange</ComboBoxItem>
                    </ComboBox>
                    <TextBox TextWrapping="Wrap" 
                     VerticalAlignment="Top"
                     MinWidth="280"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     SpellCheck.IsEnabled="True"
                     materialDesign:HintAssist.Hint="Multiline text"
                     Height="80"
                     Grid.Column="1"
                     Grid.Row="5" 
                     BorderThickness="1" 
                     BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                     Text="123123"
                     VerticalContentAlignment="Top" Margin="0,16,0,0" Style="{DynamicResource TextBoxStyle1}"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
