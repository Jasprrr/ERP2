            </materialDesign:ColorZone>
            <materialDesign:ColorZone Grid.Column="0"
                                      Padding="16"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                      Mode="PrimaryMid"
                                      Grid.ColumnSpan="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <materialDesign:Badged Badge=""
                                           Grid.Column="3">
                        <Button materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                Padding="4"
                                Grid.Column="3">
                            <materialDesign:PackIcon Kind="Bell"
                                                     Height="24"
                                                     Width="24" />
                        </Button>
                    </materialDesign:Badged>
                    <materialDesign:PopupBox Grid.Column="4"
                                             PlacementMode="BottomAndAlignRightEdges"
                                             StaysOpen="False">
                        <StackPanel>
                            <Button Content="Hello World" />
                            <Button Content="Nice Popup" />
                            <Button Content="Can't Touch This"
                                    IsEnabled="False" />
                            <Separator />
                            <Button Content="Goodbye" />
                        </StackPanel>
                    </materialDesign:PopupBox>
                    <TextBlock Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="22"
                               Text="{Binding Source={x:Static properties:Settings.Default}, Path=Username}"
                               Style="{StaticResource MaterialDesignTitleTextBlock}" />
                </Grid>
            </materialDesign:ColorZone>

            <materialDesign:PopupBox Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"
                                     Content="{materialDesign:PackIcon Kind=Pencil}"
                                     PlacementMode="TopAndAlignRightEdges"
                                     StaysOpen="False"
                                     Grid.Row="1"
                                     Grid.Column="1"
                                     VerticalAlignment="Bottom"
                                     HorizontalAlignment="Right"
                                     Margin="16"
                                     Panel.ZIndex="1"
                                     PopupMode="MouseOver"
                                     Width="56"
                                     Height="56">
                <StackPanel>
                    <Button ToolTip="Log"
                            Click="Button_Click">
                        <materialDesign:PackIcon Kind="Message" />
                    </Button>
                    <Button ToolTip="Appointment">
                        <materialDesign:PackIcon Kind="MapMarker" />
                    </Button>
                    <Button ToolTip="Order">
                        <materialDesign:PackIcon Kind="Send" />
                    </Button>
                </StackPanel>
            </materialDesign:PopupBox>

            <Frame x:Name="MainFrame"
                   Grid.Row="1"
                   Grid.Column="1"
                   Source="{Binding mainFrame}"
                   HorizontalContentAlignment="Stretch"
                   VerticalContentAlignment="Stretch"
                   Padding="6"
                   Margin="24"
                   NavigationUIVisibility="Hidden" />
        </Grid>
    </Grid>
</Window>
